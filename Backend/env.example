# =============================================================================
# CELO AUTOMATOR - COMPREHENSIVE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# The .env file is gitignored for security

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (default: 3001)
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Google Gemini API Key for AI decision engine (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (optional, for OpenAI features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for Claude features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangChain/LangSmith Configuration (optional)
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=celo-automation
LANGSMITH_PROJECT=celo-automation

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Celo wallet private key (REQUIRED - keep secure!)
PRIVATE_KEY=your_private_key_here

# Celo network (alfajores for testnet, mainnet for production)
NETWORK=alfajores

# Celo RPC endpoint
RPC_URL=https://alfajores-forno.celo-testnet.org

# Celo Network Specific URLs
CELO_NETWORK=alfajores
CELO_RPC_URL=https://alfajores-forno.celo-testnet.org
CELO_MAINNET_RPC_URL=https://forno.celo.org

# Ethereum Sepolia Configuration
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
CELO_SEPOLIA_RPC_URL=https://rpc.sepolia.org

# =============================================================================
# API KEYS & CREDENTIALS
# =============================================================================
# Alchemy API Configuration
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_POLICY_ID=your_alchemy_policy_id_here
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
NEXT_PUBLIC_ALCHEMY_POLICY_ID=your_alchemy_policy_id_here

# Infura API Configuration
INFURA_API_KEY=your_infura_api_key_here
INFURA_PROJECT_ID=your_infura_project_id_here

# Etherscan API Configuration
ETHERSCAN_API_KEY=your_etherscan_api_key_here
CELOSCAN_API_KEY=your_celoscan_api_key_here

# Postman API Configuration (for API testing)
POSTMAN_API_KEY=your_postman_api_key_here
POSTMAN_WORKSPACE_ID=your_postman_workspace_id_here
POSTMAN_COLLECTION_ID=your_postman_collection_id_here
POSTMAN_ENVIRONMENT_ID=your_postman_environment_id_here

# Celo AI SDK Configuration
CELO_AI_API_KEY=your_celo_ai_api_key_here
CELO_AI_PRIVATE_KEY=your_celo_ai_private_key_here
CELO_AI_NETWORK=ethereum

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Wallet addresses
DEPLOYER_ADDRESS=0x0000000000000000000000000000000000000000

# Test configuration
TEST_NETWORK=alfajores
TEST_PRIVATE_KEY=your_test_private_key_here

# =============================================================================
# DEPLOYED CONTRACT ADDRESSES
# =============================================================================
# AgentRegistry Contract
AGENT_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000

# AgentTreasury Contract
AGENT_TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# AttendanceNFT Contract
ATTENDANCE_NFT_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# FEATURE FLAGS & ADVANCED CONFIGURATION
# =============================================================================
# Enable blockchain integration (default: true)
ENABLE_BLOCKCHAIN_INTEGRATION=true

# Enable real blockchain calls (default: true)
ENABLE_REAL_BLOCKCHAIN_CALLS=true
ENABLE_REAL_TRANSACTIONS=false

# Risk management
MAX_RISK_SCORE=50
REQUIRE_APPROVAL=false

# Transaction features
ENABLE_SIMULATION=true
ENABLE_GAS_OPTIMIZATION=true

# Module features
ENABLE_MCP=true
ENABLE_AI_AGENTS=true
ENABLE_MULTI_CHAIN=true
ENABLE_PROXY=false
ENABLE_MONITORING=true
ENABLE_TESTING=false
ENABLE_CONTRACT_FACTORY=true
ENABLE_ADVANCED_FEATURES=false

# =============================================================================
# PROXY & MONITORING CONFIGURATION
# =============================================================================
# Proxy server port (default: 3000)
PROXY_PORT=3000

# Monitoring interval in milliseconds (default: 30000)
MONITORING_INTERVAL=30000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database path
DATABASE_PATH=./data/ai_engine.db

# PostgreSQL database URL (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/celo_ai_agents

# Test database path
TEST_DATABASE_PATH=./test-data/test.db

# =============================================================================
# SUPABASE CONFIGURATION (optional)
# =============================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format
LOG_FORMAT=combined

# Debug logging
DEBUG=true
DEBUG_MODE=true
VERBOSE_LOGGING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Data masking and privacy
ENABLE_MASKING=true
MASKING_STRATEGY=partial
MASK_FIELDS=privateKey,apiKey,secret,token

# Encryption and audit
ENABLE_ENCRYPTION=false
ENABLE_AUDIT_LOGGING=false
GDPR_COMPLIANT=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup directory
BACKUP_DIR=./backups

# Backup retention days
BACKUP_RETENTION_DAYS=90

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook URLs for notifications
WEBHOOK_URL=your_webhook_url_here

