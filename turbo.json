{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "CELO_NETWORK",
    "CELO_RPC_URL",
    "CELO_PRIVATE_KEY",
    "DATABASE_URL",
    "GEMINI_API_KEY",
    "LANGCHAIN_API_KEY",
    "OPENAI_API_KEY"
  ],
  "globalDependencies": [
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "turbo.json",
    "tsconfig.base.json",
    "**/.env",
    "**/.env.*",
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "!dist/**",
        "!build/**",
        "vite.config.*",
        "next.config.*"
      ],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "eslint.config.*",
        ".eslintrc.*",
        "tsconfig.*"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "tests/**",
        "test/**",
        "package.json",
        "tsconfig.json",
        "vitest.config.*",
        "jest.config.*"
      ],
      "outputs": ["coverage/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "!dist/**",
        "!build/**"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": [],
      "env": [
        "CELO_NETWORK",
        "CELO_PRIVATE_KEY",
        "DATABASE_URL",
        "LANGCHAIN_API_KEY",
        "GEMINI_API_KEY",
        "OPENAI_API_KEY"
      ]
    }
  }
}
